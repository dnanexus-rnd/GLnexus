{
  "name": "GLnexus",
  "title": "GLnexus",
  "summary": "GLnexus",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "gvcf",
      "class": "array:file",
      "optional": true,
      "patterns": ["*.gvcf.gz", "*.g.vcf.gz", "*.gvcf", "*.g.vcf"]
    },
    {
      "name": "gvcf_tar",
      "class": "array:file",
      "optional": true,
      "patterns": ["*.tar"]
    },
    {
      "name": "ranges_to_load",
      "class": "array:string",
      "optional": true
    },
    {
      "name": "bucket_size",
      "class": "int",
      "optional": true
    },
    {
      "name": "existing_db",
      "class": "file",
      "type": "GLnexus_db",
      "optional": true
    },
    {
      "name": "ranges_to_genotype",
      "class": "array:string",
      "optional": true
    },
    {
      "name": "bed_ranges_to_genotype",
      "class": "file",
      "optional": true
    },
    {
      "name": "config",
      "description": "configuration preset",
      "class": "string",
      "optional": true
    },
    {
      "name": "output_name",
      "class": "string",
      "default": "GLnexus"
    },
    {
      "name": "sleep",
      "class": "int",
      "default": 0
    },
    {
      "name": "enable_perf",
      "class": "boolean",
      "default": false,
      "optional": true
    },
    {
      "name": "enable_kernel_perf",
      "class": "boolean",
      "default": false,
      "optional": true
    },
    {
      "name": "iter_compare",
      "class": "boolean",
      "default": false,
      "optional": true
    },
    {
      "name": "residuals",
      "class": "boolean",
      "default": false,
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "vcf",
      "class": "file",
      "patterns": ["*.vcf.gz"],
      "optional": true
    },
    {
      "name": "db",
      "class": "file",
      "type": "GLnexus_db",
      "optional": true
    },
    {
      "name": "db_load_log",
      "class": "file"
    },
    {
      "name": "perf",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "residuals",
      "class": "file",
      "optional": true
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/code.sh",
    "execDepends": [
      {"name": "liblz4-dev"},
      {"name": "libsnappy-dev"},
      {"name": "sysstat"},
      {"name": "numactl"}
    ],
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x2"
      }
    },
    "distribution": "Ubuntu",
    "release": "14.04"
  },
  "access": {
    "network": ["*"]
  },
  "authorizedUsers": []
}

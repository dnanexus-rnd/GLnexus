{
  "name": "GLnexus",
  "title": "GLnexus",
  "summary": "GLnexus executable that processes a set of input gvcf files",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "gvcf",
      "help": "source gvcf files",
      "class": "array:file",
      "optional": true,
      "patterns": ["*.gvcf.gz", "*.g.vcf.gz", "*.gvcf", "*.g.vcf"]
    },
    {
      "name": "gvcf_manifest",
      "help": "File containing DNAnexus IDs of gVCF files to process (file-xxxx or project-yyyy:file-xxxx), one ID per line.",
      "class": "file",
      "optional": true
    },
    {
      "name": "bed_ranges_to_genotype",
      "help": "limit genotyping to these ranges",
      "class": "file"
    },
    {
      "name": "output_name",
      "help": "prefix for output file names",
      "class": "string",
      "default": "GLnexus"
    },
    {
      "name": "config",
      "help": "preset configuration selection",
      "choices": ["gatk", "gatk_unfiltered", "xAtlas", "xAtlas_unfiltered", "weCall", "DeepVariant", "Strelka2"],
      "class": "string",
      "default": "gatk"
    },
    {
      "name": "config_yml",
      "help": "custom configuration .yml file (overrides config)",
      "class": "file",
      "patterns": ["*.yml"],
      "optional": true
    },
    {
      "name": "squeeze",
      "help": "Squeeze output QC fields",
      "class": "boolean",
      "default": false,
      "optional": true
    },
    {
      "name": "bucket_size",
      "class": "int",
      "optional": true
    },
    {
      "name": "debug",
      "help": "output additional files (unified-sites, discovered alleles, residuals)",
      "class": "boolean",
      "default": false,
      "optional": true
    },
    {
      "name": "generate_perf",
      "help": "add performance tracing and outputs",
      "class": "boolean",
      "default": false,
      "optional": true
    },
    {
      "name": "generate_perf_kernel",
      "help": "trace kernel symbols, requires special permissions on the container. Implies the generate_perf flag.",
      "class": "boolean",
      "default": false,
      "optional": true
    },
    {
      "name": "iter_compare",
      "help": "debugging: compare different database iteration implementations",
      "class": "boolean",
      "default": false,
      "optional": true
    },
    {
      "name": "sleep",
      "help": "wait for debugging, require the --allow-ssh flag",
      "class": "int",
      "default": 0,
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "discovered_alleles",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "perf",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "residuals",
      "class": "file",
      "optional": true
    },
    {
      "name": "unified_sites",
      "class": "file",
      "optional": true
    },
    {
      "name": "vcf",
      "class": "file",
      "patterns": ["*.vcf.gz"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/code.sh",
    "execDepends": [
      {"name": "sysstat"},
      {"name": "numactl"},
      {"name": "libjemalloc1"},
      {"name": "pigz"}
    ],
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x4"
      }
    },
    "distribution": "Ubuntu",
    "release": "16.04"
  },
  "access": {
    "network": ["*"]
  },
  "authorizedUsers": []
}
